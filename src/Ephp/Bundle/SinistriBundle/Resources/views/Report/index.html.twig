<h1>Report list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Data</th>
            <th>Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('report_tabellone_show', { 'scheda': scheda, 'id': entity.id }) }}">{{ entity.data|date('d/m/Y') }}</a></td>
            <td>{{ entity.number }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('report_tabellone_show', { 'scheda': scheda,'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('report_tabellone_edit', { 'scheda': scheda,'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('report_tabellone_new', { 'scheda': scheda }) }}">
            Create a new entry
        </a>
    </li>
</ul>
